<style>
  .list-projects {
    margin: 1em 0;
    display: flex;
    flex-direction: column;
    gap: 1em;
  }

  .project {
    display: flex;
    gap: 1em;
  }
  .project-details {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .project-header .btn-icon {
    width: 1.5em;
    cursor: pointer;
    color: white;
  }

  .btn-icon:hover {
    filter: brightness(0.8);
  }

  .technologies {
    display: flex;
    align-items: center;
    gap: 0.5em;
    margin-top: 0.5em;
  }

  .icon-lenguage {
    padding: 0.2em 1em;
    border-radius: 1em;
    background-color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 0.5em;
  }

  .icon {
    width: 1em;
  }

  .img-project {
    width: 28em;
    height: 14em;
    overflow: hidden;
    border-radius: 0.5em;
  }
  .bijiapp {
    background-color: #9abe49;
  }

  .m9 {
    background-color: #35c1c8;
  }

  .farma {
    background-color: #ffcb26;
  }

  .innovatech {
    background-color: #ab89f8;
  }

  .bijiapp-img {
    width: 12em;
    float: right;
    height: auto;
    border-radius: 0.5em;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    margin-top: 1em;
    margin-right: 1em;
  }

  .m9-img {
    width: 28em;
    border-radius: 0.5em;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    margin-top: 1.5em;
    margin-left: 1.5em;
  }
</style>
